<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".MainActivity">

  <!--  Header  -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hello Piseth"
                    android:textSize="20sp"
                    android:fontFamily="@font/cabin_regular"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Good morning have a nice days!"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/cabin_regular"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/profile_img"
                    android:scaleType="centerCrop"
                    app:civ_border_color="#FF000000" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

<!-- Dashboard Filter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20sp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="5sp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_alignParentLeft="true"
                android:layout_width="180sp"
                android:layout_height="100sp"
                android:background="@drawable/dashbord_filter_project"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="80dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:background="@drawable/dashboard_icon_circle"
                            >
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="26dp"
                                android:src="@drawable/project_icon"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Project"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:textSize="23dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/cabin_regular"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:textSize="23dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/cabin_regular"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="180sp"
                android:layout_height="100sp"
                android:background="@drawable/dashbord_filter_work"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="80dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:background="@drawable/dashboard_icon_circle"
                            >
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="25dp"
                                android:src="@drawable/work_icon"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Work"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:textSize="23dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/cabin_regular"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:textSize="23dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/cabin_regular"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            >
            <LinearLayout
                android:layout_alignParentLeft="true"
                android:layout_width="180sp"
                android:layout_height="100sp"
                android:background="@drawable/dashbord_filter_daily"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="80dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:background="@drawable/dashboard_icon_circle"
                            >
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="25dp"
                                android:src="@drawable/daily_icon"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daily"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:textSize="23dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/cabin_regular"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:textSize="23dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/cabin_regular"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="180sp"
                android:layout_height="100sp"
                android:background="@drawable/dashbord_filter_groceries"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="80dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:background="@drawable/dashboard_icon_circle"
                            >
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="25dp"
                                android:src="@drawable/groceries_icon"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Groceries"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:textSize="23dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/cabin_regular"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:textSize="23dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/cabin_regular"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

<!-- Task Title Header   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/all_tasks_icon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Tasks"
            android:fontFamily="@font/cabin_regular"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/total_all_task_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginStart="5sp"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_tasks"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginTop="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"
        tools:layout_editor_absoluteX="1dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/create_new_task_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:fontFamily="@font/cabin_regular"
            android:text="Create new task"
            android:background="@drawable/create_button"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/white_gray"
            />
    </LinearLayout>
  </LinearLayout>